<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GhostWhite" >

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="31dp"
    android:text="Ideas Are Bulletproof"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/gold"
    android:textSize="25dp" />

<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="48dp"
            android:background="@color/SlateGray"
            android:clickable="false"
            android:hint="You haven&apos;t stored any idea yet. Don&apos;t worry, it is safe to add."
            android:longClickable="false"
            android:onClick="test"
            android:textColor="@color/AntiqueWhite"
            android:textColorHint="@color/LightGreen"
            android:textSize="45sp" />

    </LinearLayout>
</ScrollView>

</RelativeLayout>
